# Database (必需)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/inventory_db
DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/inventory_db

# Redis (必需)
REDIS_URL=redis://localhost:6379/0

# Environment (test, dev, or prod)
ENVIRONMENT=prod

# Rakuten API (可选，但建议设置以启用 API 功能)
# These are example values - replace with actual credentials
RAKUTEN_DEFAULT_SERVICE_SECRET=your_service_secret_here
RAKUTEN_DEFAULT_LICENSE_KEY=your_license_key_here

# Rakuten API Proxy (可选，国内访问必需)
# Set if you need to access Rakuten API through a proxy
# Leave empty or comment out if not needed
# Example: RAKUTEN_PROXY=http://127.0.0.1:10808
RAKUTEN_PROXY=

# API Server
API_HOST=0.0.0.0
API_PORT=8000
